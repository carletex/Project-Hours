{% extends '::base.html.twig' %}

{% block body -%}
<div class="row">
  <div class="col-lg-4">
    <h1>Client</h1>
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-actions">
          <a href="{{ path('clients') }}">
              Back to the list
          </a>
          <a class="btn btn-warning" href="{{ path('clients_edit', { 'id': entity.id }) }}">
              Edit
          </a>
      <!-- {{ form(delete_form) }} -->
    </div>
</div>
<div class="col-lg-8">
  <h2>Projects</h2>
  {{ render(controller('AppBundle:Project:blockIndex', {'client': entity.id})) }}
</div>
</div>
{% endblock %}
