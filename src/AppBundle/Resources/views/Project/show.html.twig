{% extends '::base.html.twig' %}

{% block body -%}
<ul>
    <li>
        <a href="{{ path('records_new') }}">
            Create a new record
        </a>
    </li>
</ul>
    <h1>Project</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
        </tbody>
    </table>

<ul class="record_actions">
    <li>
        <a href="{{ path('projects') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('projects_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>

<h2>Last records</h2>
{{ render(controller('AppBundle:Record:blockLast', { 'max': 0, 'project': entity })) }}

{% endblock %}
