{% extends '::base.html.twig' %}

{% block body -%}
<div class="row">
  <div class="col-lg-4">
    <h1>Project</h1>
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td><a href="{{ path('clients_show', { 'id': entity.client.id }) }}">{{ entity.client.name }}</td>
            </tr>
            <tr>
                <th>Hours spent</th>
                <td>{{ hours }}</td>
            </tr>
        </tbody>
    </table>
    <div class="btn-actions">
      <a href="{{ path('projects') }}">
          Back to the list
      </a>
      <a class="btn btn-warning"  href="{{ path('projects_edit', { 'id': entity.id }) }}">
          Edit
      </a>
      <!-- <li>{{ form(delete_form) }}</li> -->
    </div>
  </div>
<div class="col-lg-8">
  <h2>Last records</h2>
  {{ render(controller('AppBundle:Record:blockLast', { 'max': 0, 'project': entity })) }}
</div>
</div>


{% endblock %}
