{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Project list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Client</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td><a href="{{ path('clients_show', { id: entity.client.id }) }}">{{ entity.client }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('projects_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('projects_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-actions">
        <a class="btn btn-primary" href="{{ path('projects_new') }}">
            New project
        </a>
    </div>
    {% endblock %}
